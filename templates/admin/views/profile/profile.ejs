<%- include('../../partials/head' , { title: 'Profile' }) %>
    <%- include('../../partials/sidebar') %>
        <%- include('../../partials/header') %>

            <main class="content">
                <div class="container-fluid p-0">

                    <div class="mb-3">
                        <h1 class="h3 d-inline align-middle">Profile</h1>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-xl-3">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Profile Details</h5>
                                </div>
                                <div class="card-body text-center">
                                    <img src="/user/<%= user.image %>" alt="<%= user.name %>"
                                        class="img-fluid rounded-circle mb-2" width="128" height="128" />
                                    <h5 class="card-title mb-0">
                                        <%= user.name %>
                                    </h5>
                                    <div class="text-muted mb-2">Backend Developer</div>

                                    <div>
                                        <a target="_blank" class="btn btn-primary btn-sm" href="https://mail.google.com/">Gmail</a>
                                        <a target="_blank" class="btn btn-primary btn-sm" href="http://<%=url%>"><span
                                                data-feather="message-square"></span> Website</a>
                                    </div>
                                </div>
                                <hr class="my-0" />
                                <div class="card-body">
                                    <h5 class="h6 card-title">Skills</h5>
                                    <% user.skills.forEach((skill)=> { %>
                                        <a href="#" class="badge bg-primary me-1 my-1">
                                            <%= skill.title %>
                                        </a>
                                        <% }) %>
                                </div>
                                <hr class="my-0" />
                                <div class="card-body">
                                    <h5 class="h6 card-title">About</h5>
                                    <ul class="list-unstyled mb-0">

                                        <li class="mb-1"><span data-feather="briefcase" class="feather-sm me-1"></span>
                                            Email <a href="#"><%= user.email %></a></li>

                                        <li class="mb-1"><span data-feather="briefcase" class="feather-sm me-1"></span>
                                                Phone <a href="#"><%= user.phone %></a></li>
                                            
                                        <li class="mb-1"><span data-feather="briefcase" class="feather-sm me-1"></span>
                                                Website <a href="https://<%= user.website %>"><%= user.website %></a></li>
                                        
                                        <li class="mb-1"><span data-feather="home" class="feather-sm me-1"></span> Lives
                                            in <a href="#">
                                                <%= user.address %>
                                            </a></li>

                                        <li class="mb-1"><span data-feather="briefcase" class="feather-sm me-1"></span>
                                            Works at <a href="#">GitHub</a></li>
                                        <li class="mb-1"><span data-feather="map-pin" class="feather-sm me-1"></span>
                                            From <a href="#">
                                                <%= user.address %>
                                            </a></li>

                                        <li class="mb-1"><span data-feather="briefcase" class="feather-sm me-1"></span>
                                            Degree <a href="#"><%= user.degree %></a></li>
                                    </ul>
                                </div>
                                <hr class="my-0" />
                                <div class="card-body">
                                    <h5 class="h6 card-title">Elsewhere</h5>
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-1"><a href="<%= user.github %>">Github</a></li>
                                        <li class="mb-1"><a href="<%= user.linkedin %>">Linkedin</a></li>
                                        <li class="mb-1"><a href="<%= user.instagram %>">Instagram</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8 col-xl-9">
                            <div class="card">
                                <div class="card-header">

                                    <h5 class="card-title mb-0">Activities</h5>
                                </div>
                                <div class="card-body h-100">

                                    <% user.activities.forEach((a)=> { %>
                                        <div class="d-flex align-items-start">
                                            <img src="/user/<%= user.image %>" width="36" height="36"
                                                class="rounded-circle me-2" alt="William Harris">
                                            <div class="flex-grow-1">
                                                <small class="float-end text-navy"><%= moment(a.createdAt).fromNow() %></small>

                                                <%= a.action %><br />
    
                                                <div class="d-flex align-items-start mt-2">

                                                    <div class="flex-grow-1">
                                                        <div class="border text-sm text-muted p-2 mt-1">
                                                            <%= a.description %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <hr>

                                    <% }) %>
                            
                                    <div class="d-grid">
                                        <a href="#" class="btn btn-primary">Load more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </main>

            <%- include('../../partials/footer') %>